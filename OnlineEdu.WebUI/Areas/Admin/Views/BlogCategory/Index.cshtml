@model List<ResultBlogCategoryDto>
@{
    ViewData["Title"] = "Blog Category Page";
    Layout = "_AdminLayout";
}
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>

        <th>#</th>
        <th>Category Name</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.Name</th>
            <td>
                <button onclick="deleteBlogCategory(@item.BlogCategoryId)" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateBlogCategory" asp-controller="BlogCategory" asp-area="Admin" class="btn btn-outline-info" asp-route-id=@item.BlogCategoryId">Güncelle</a>
            </td>
        </tr>
    }
</table>

<br />
<a asp-action="CreateBlogCategory" asp-controller="BlogCategory" asp-area="Admin" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>
<script>

        function deleteBlogCategory(id){
            Swal.fire({
                  title: "Are you sure?",
                  text: "You won't be able to revert this!",
                  icon: "warning",
                  showCancelButton: true,
                  confirmButtonColor: "#3085d6",
                  cancelButtonColor: "#d33",
                  confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                  if (result.isConfirmed) {
                    Swal.fire({
                      title: "Deleted!",
                      text: "Your file has been deleted.",
                      icon: "success"
                    });
                window.location.href = "/Admin/BlogCategory/DeleteBlogCategory/" + id
                  }
            });
        }

      
</script>