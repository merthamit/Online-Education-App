@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Message Page";
    Layout = "_AdminLayout";
}
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>

        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.Name</th>
            <th>@item.Email</th>
            <th>@item.Subject</th>
            <td>
                <button onclick="deleteMessage(@item.MessageId)" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateMessage" asp-controller="Message" asp-area="Admin" class="btn btn-outline-info" asp-route-id=@item.MessageId">Güncelle</a>
                <a asp-action="MessageDetail" asp-controller="Message" asp-area="Admin" class="btn btn-outline-primary" asp-route-id=@item.MessageId">Göster</a>
            </td>
        </tr>
    }
</table>

<br />
<a asp-action="CreateMessage" asp-controller="Message" asp-area="Admin" class="btn btn-outline-primary">Yeni Message Ekle</a>
<script>

    function deleteMessage(id){
        Swal.fire({
              title: "Are you sure?",
              text: "You won't be able to revert this!",
              icon: "warning",
              showCancelButton: true,
              confirmButtonColor: "#3085d6",
              cancelButtonColor: "#d33",
              confirmButtonText: "Yes, delete it!"
            }).then((result) => {
              if (result.isConfirmed) {
                Swal.fire({
                  title: "Deleted!",
                  text: "Your file has been deleted.",
                  icon: "success"
                });
            window.location.href = "/Admin/Message/DeleteMessage/" + id
              }
        });
    }


</script>