@model CreateMessageDto
@{
    ViewData["Title"] = "Message Oluşturma sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post">
    <label>Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label>Email</label>
    <input type="text" asp-for="Email" class="form-control" />
    <br />

    <label>Subject</label>
    <input type="text" asp-for="Subject" class="form-control" />
    <br />

    <textarea asp-for="Content" class="form-control" rows="3"></textarea>

    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
</form>
