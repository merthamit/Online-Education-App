@model UpdateCourseCategoryDto
@{
    ViewData["Title"] = "Course Category oluşturma sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post">
    <input type="hidden"  asp-for="CourseCategoryId" />
    <label>Category Name</label>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <br />

    <label>Description</label>
    <textarea type="text" asp-for="Description" class="form-control" rows="3"></textarea>
    <br />

    <label>Icon</label>
    <input type="text" asp-for="Icon" class="form-control" />
    <br />

    <label>Ana Sayfada Gösterilsin mi?</label>
    <input type="checkbox" asp-for="IsShown" class="form-check" />
    <br />

    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
</form>

