@model List<ResultCourseCategoryDto>
@{
    ViewData["Title"] = "Course Category Page";
    Layout = "_AdminLayout";
}
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>

        <th>#</th>
        <th>Category Name</th>
        <th>Description</th>
        <th>Is Shown</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.CategoryName</th>
            <th>@item.Description</th>
            <th>@(item.IsShown ? "Gösteriliyor" : "Gösterilmiyor")</th>
            <td>
                <button onclick="deleteCourseCategory(@item.CourseCategoryId)" class="btn btn-outline-danger">Sil</button>
                <a asp-action="UpdateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" class="btn btn-outline-info" asp-route-id=@item.CourseCategoryId">Güncelle</a>
            </td>
            <td>
                <a asp-action="ShowOnHome" asp-controller="CourseCategory" asp-area="Admin" class="btn btn-outline-success" asp-route-id=@item.CourseCategoryId">Göster</a>
                <a asp-action="DontShowOnHome" asp-controller="CourseCategory" asp-area="Admin" class="btn btn-outline-secondary" asp-route-id=@item.CourseCategoryId">Gösterme</a>
            </td>
        </tr>
    }
</table>

<br />
<a asp-action="CreateCourseCategory" asp-controller="CourseCategory" asp-area="Admin" class="btn btn-outline-primary">Yeni Hakkımda Ekle</a>
<script>

    function deleteCourseCategory(id){
        Swal.fire({
              title: "Are you sure?",
              text: "You won't be able to revert this!",
              icon: "warning",
              showCancelButton: true,
              confirmButtonColor: "#3085d6",
              cancelButtonColor: "#d33",
              confirmButtonText: "Yes, delete it!"
            }).then((result) => {
              if (result.isConfirmed) {
                Swal.fire({
                  title: "Deleted!",
                  text: "Your file has been deleted.",
                  icon: "success"
                });
            window.location.href = "/Admin/CourseCategory/DeleteCourseCategory/" + id
              }
        });
    }


</script>