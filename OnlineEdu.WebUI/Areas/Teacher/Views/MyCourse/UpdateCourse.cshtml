@model UpdateCourseDto

@{
    ViewData["Title"] = "Yeni kurs oluşturma sayfası";
    Layout = "~/Areas/Teacher/Views/TeacherLayout/Index.cshtml";
}


<form method="post">
    <label>Name</label>
    <input type="hidden" asp-for="CourseId" class="form-control" />
    <input type="text" asp-for="CourseName" class="form-control" />
    <span asp-validation-for="CourseName" class="text-danger"></span>
    <br />

    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />

    <label>Price</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />

    <label>Course Categories</label>
    <select asp-items="@ViewBag.categories" asp-for="CourseCategoryId" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <br />

    <br />
    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
</form>
